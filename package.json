{
  "name": "gitpad",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@trpc/server": "^11.5.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "@trpc/client": "^11.5.0"
    }
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:proxy": "turbo -F proxy dev:ngrok",
    "db:push": "turbo -F @gitpad/db db:push",
    "db:studio": "turbo -F @gitpad/db db:studio",
    "db:generate": "turbo -F @gitpad/db db:generate",
    "db:migrate": "turbo -F @gitpad/db db:migrate",
    "db:start": "turbo -F @gitpad/db db:start",
    "db:watch": "turbo -F @gitpad/db db:watch",
    "db:stop": "turbo -F @gitpad/db db:stop",
    "db:down": "turbo -F @gitpad/db db:down",
    "db:seed": "turbo -F @gitpad/db db:seed"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@types/bun": "^1.2.6"
  },
  "packageManager": "bun@1.3.2"
}
