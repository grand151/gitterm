{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "RAILPACK",
      "buildCommand": "turbo build --filter=proxy",
      "watchPatterns": [
        "apps/proxy/**/*",
        "packages/auth/**/*",
        "packages/db/**/*",
        ".env*",
        "turbo.json",
        "package.json"
      ]
      },
    "deploy": {
      "startCommand": "cd apps/proxy && bun run dist/index.mjs",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 100,
      "restartPolicyType": "never"
    }
  }