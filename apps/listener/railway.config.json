{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "RAILPACK",
      "buildCommand": "turbo build --filter=listener",
      "watchPatterns": [
        "apps/listener/**/*",
        "packages/api/**/*",
        "packages/auth/**/*", 
        "packages/db/**/*",
        "packages/schema/**/*",
        ".env*",
        "turbo.json",
        "package.json"
      ]
      },
    "deploy": {
      "startCommand": "cd apps/listener && ls -la && bun run dist/index.mjs",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 100,
      "restartPolicyType": "never"
    }
  }