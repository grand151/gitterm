{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
      "builder": "RAILPACK",
      "buildCommand": "turbo build --filter=web",
      "watchPatterns": [
        "apps/web/**/*",
        "packages/api/**/*",
        "packages/auth/**/*",
        ".env*",
        "turbo.json",
        "package.json"
      ]
      },
    "deploy": {
      "startCommand": "cd apps/web && bun run start",
      "healthcheckPath": "/api/health",
      "healthcheckTimeout": 100,
      "restartPolicyType": "never"
    }
  }