{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "turbo build --filter=tunnel-proxy",
    "watchPatterns": [
      "apps/tunnel-proxy/**/*",
      "packages/api/**/*",
      "packages/auth/**/*",
      "packages/config/**/*"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/tunnel-proxy && bun run dist/index.mjs",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
